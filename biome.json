{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": { "enabled": true },
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/build/**",
			"**/coverage/**",
			"**/out/**",
			"**/generated/**",
			"**/generated-sources/**",
			"**/generated-tests/**"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useBlockStatements": "error",
				"useShorthandArrayType": "error",
				"noShoutyConstants": "warn"
			}
		}
	}
}
